<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FloorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/first_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LANTAI\nPERTAMA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:padding="50dp"
            android:background="@drawable/rounded_background"/>

        <TextView
            android:id="@+id/second_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="LANTAI\nKEDUA"
            app:layout_constraintTop_toBottomOf="@id/first_floor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/third_floor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="50dp"
            android:background="@drawable/rounded_background"/>

        <TextView
            android:id="@+id/third_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="LANTAI\nKETIGA"
            app:layout_constraintTop_toBottomOf="@id/first_floor"
            app:layout_constraintStart_toEndOf="@id/second_floor"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="50dp"
            android:background="@drawable/rounded_background"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>